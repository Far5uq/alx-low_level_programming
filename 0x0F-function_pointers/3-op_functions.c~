#include "3-calc.h"

/**
 * op_add - prints result of addition
 * @a: int 1
 * @b: int 2
 *
 * Return: Always 0.
 */

int op_add(int a, int b)
{
return (a + b);
}

/**
 * op_sub - prints result of subtraction
 * @a: int 1
 * @b: int 2
 *
 * Return: Always 0.
 */

int op_sub(int a, int b)
{
return (a - b);
}

/**
 * op_mul - prints result of multiplication
 * @a: int 1
 * @b: int 2
 *
 * Return: Always 0.
 */

int op_mul(int a, int b)
{
return (a * b);
}

/**
 * op_div - prints result of division
 * @a: int 1
 * @b: int 2
 * Return: Always 0.
 */

int op_div(int a, int b)
{
if (b == 0)
{
printf("Error\n");
exit(100);
}
return (a / b);
}

/**
 * op_mod - prints result of division rimainder
 * @a: int 1
 * @b: int 2
 *
 * Return: Always 0.
 */

int op_mod(int a, int b)
{
if (b == 0)
{
printf("Error\n");
exit(100);
}
return (a % b);
}
